{

  "rules": [
    {
      "rule_id": "test-eq-cond",
      "condition": {"eq": {"http.request.method": "GET"}},
      "action": {"type": "setHeader", "headerName": "foo", "headerValue": "bar"}
    },
    {
      "rule_id": "test-and-cond",
      "condition": {
        "and": [
          {"eq": {"http.request.method": "GET"}},
          {"eq": {"http.request.header.host": "example.com"}}
        ]
      },
      "action": {"type": "setHeader", "headerName": "hi", "headerValue": "there"}
    },
    {
      "rule_id": "test-or-cond",
      "condition": {
        "or": [
          {"eq": {"http.request.method": "GET"}},
          {"eq": {"http.request.header.host": "foo.com"}}
        ]
      },
      "action": {"type": "setHeader", "headerName": "or", "headerValue": "condition"}
    },
    {
      "rule_id": "test-not-cond",
      "condition": {
        "not": {"eq": {"http.request.method": "PUT"}}
      },
      "action": {"type": "block", "statusCode": 503}
    },
    {
      "rule_id": "test-client-ip",
      "condition": {
        "eq": {"http.request.clientIp": "127.0.0.99"}
      },
      "action": {"type": "block", "statusCode": 429}
    },
    {
      "rule_id": "test-static-throttle",
      "condition": {
        "and": [
          {"eq": {"http.request.header.host": "deactivated.example.com"}}
        ]
      },
      "action": {"type": "throttle", "max_tokens": 50, "refill_amount": 5, "refill_time": 1 }
    },
    {
      "rule_id": "test-eachUnique-throttle",
      "condition": {
        "and": [
          {"eq": {"http.request.header.host": "throttled.example.com"}}
        ]
      },
      "action": {
        "type": "throttle",
        "max_tokens": 5,
        "refill_amount": 5,
        "refill_time": 1,
        "each_unique": "http.request.clientIp"
      }
    },
    {
      "rule_id": "test-queryParam",
      "condition": {"eq": {"http.request.queryParam.userId": "joe"}},
      "action": {"type": "block", "statusCode": 503}
    }
  ]
}
